<!DOCTYPE html>
<html>
  <head>
    <title>OmRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <!-- Nav Bar-->
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <div class="container">
  <%= link_to "omrails", root_path, class: "navbar-brand" %>
    <ul class="nav navbar-nav">
      <li class="nav-item">
         <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
         <%= link_to "About", about_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Contact", "#", class: "nav-link" %>
      </li>
          <% if user_signed_in? %>
            <li class="nav-item float-md-right"><%= link_to "Log out", signout_path, method: :delete, class: "nav-link" %></li>
          <% else %>
            <li class="nav-item float-md-right"><%= link_to "Sign in", signin_path, class: "nav-link" %></li>
            <li class="nav-item float-md-right"><%= link_to "Sign up", signup_path, class: "btn btn-primary" %></li>
          <% end %>

    </ul>

  </div>
</nav>






   <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>
        <%= yield %>





    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2019 One Month</p>
        </center>
      </div>
    </footer>

  </body>
</html>
